	"$schema": "https://schema.tauri.app/config/2",
	"productName": "StoneFlow",
	"version": "0.1.1",
	"identifier": "com.stonefish.stoneflow",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"label": "main",
				"title": "StoneFlow",
				"width": 1360,
				"height": 960,
				"minWidth": 1080,
				"minHeight": 800
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"createUpdaterArtifacts": true,
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
